<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>
  <system.serviceModel>

    <client>
      <endpoint address="http://localhost:8001/Service/username" binding="wsHttpBinding"
          bindingConfiguration="BindDemo" behaviorConfiguration="behaveDemo" contract="Iservice"
          name="Username">
      </endpoint>
    </client>

    <bindings>
      <wsHttpBinding>
        <binding name="BindDemo">
          <security>
            <message clientCredentialType="UserName" />
          </security>
        </binding>
      </wsHttpBinding>
    </bindings>

    <behaviors>
      <endpointBehaviors>
        <behavior name="behaveDemo">
          <clientCredentials>
            <serviceCertificate>
              <authentication certificateValidationMode="PeerOrChainTrust"/>
            </serviceCertificate>
          </clientCredentials>
        </behavior>
      </endpointBehaviors>
    </behaviors>
    
  </system.serviceModel>
</configuration>